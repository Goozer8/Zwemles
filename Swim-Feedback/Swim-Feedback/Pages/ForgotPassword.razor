@page "/forgot-password"

<AuthorizeView>
<Authorized>
<AuthorizeView Roles="Teacher, Admin">
<Authorized Context="a">
    <div class="trans-header">
        <a class="btn-secondary" href="/login"><i class="fa-solid fa-chevron-left"></i> Ga terug</a>
    </div>

    <div class="top-text forgot-password">
        <h1>Wachtwoord vergeten</h1>
        <h3>Vul onderstaande gegevens in</h3>
    </div>

    <div class="input-group forgot-password">
        <div class="forgot-password-username">
            <i class="fa-solid fa-user"></i>
            <input class="input-primary" type="text" placeholder="E-mailadres" required />
        </div>
    </div>

    <div class="footer-text forgot-password">
        <button class="btn-primary">Aanvragen</button>
    </div>
</Authorized>
<NotAuthorized Context="a">
<CNotAuthorized />
</NotAuthorized>
</AuthorizeView>
</Authorized>
<NotAuthorized>
<CRedirect URI="login" />
</NotAuthorized>
</AuthorizeView>
